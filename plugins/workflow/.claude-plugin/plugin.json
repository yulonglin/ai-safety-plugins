{
  "name": "workflow",
  "description": "Agent teams, handover, conversation management, and usage analytics.",
  "version": "1.0.0",
  "author": {
    "name": "yulong"
  },
  "repository": "https://github.com/yulonglin/ai-safety-plugins",
  "license": "MIT",
  "keywords": ["agents", "teams", "handover", "analytics"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/auto_log.sh START",
            "async": true
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check_pipe_buffering.sh"
          },
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/auto_background.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/auto_log.sh END",
            "async": true
          }
        ]
      }
    ]
  }
}
